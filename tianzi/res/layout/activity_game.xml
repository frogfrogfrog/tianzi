    <TextView 
        android:id="@+id/game_textview_question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/game_questionback"
        android:textSize="15sp"/>
    
    <GridView
        android:id="@+id/game_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_textview_question"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="12sp"
        android:horizontalSpacing="5px"
        android:verticalSpacing="5px"
        android:gravity="center"
        android:numColumns="10"/>
    
     <GridView
        android:id="@+id/game_gridview2"
