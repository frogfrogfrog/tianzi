        android:layout_marginLeft="45sp"
        android:layout_marginRight="45sp"
        android:layout_marginTop="12sp"
        android:horizontalSpacing="5px"
        android:verticalSpacing="5px"
        android:gravity="center"
        android:numColumns="8"/>

